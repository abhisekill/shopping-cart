<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 

<div class="container" style="margin-top: 70px;">
    <form class="needs-validation" action="/login" method="POST" style="width: 50%; margin:0 auto;" novalidate>
        
        <h4 class="display-h4 mb-4 text-center">Login</h4>
        <%- include('../partials/flash') %> 
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Username" name="username" required>
            <div class="invalid-feedback">
                Enter Your Username
            </div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            <div class="invalid-feedback">
                Enter Your Password
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Login</button>
        <a href="/register" class="nav-link active text-center text-blue mb-5">New to Shopping-Cart?Create an account</a>
    </form>
</div>


