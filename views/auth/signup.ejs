<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 

<div class="container" style="margin-top: 70px;">
    <form class="needs-validation" action="/register" method="POST" style="width: 50%; margin:0 auto;" novalidate>

        <h4 class="display-h4 mb-4 text-center">New User? Sign Up</h4>
        <%- include('../partials/flash') %> 
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Username" name="username" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
            <div class="invalid-feedback">
                Please Enter Your Email
            </div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Enter Password
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-3">SignUp</button>
        <a href="/login" class="nav-link active text-center text-blue mb-5">Already a User?Log in</a>
    </form>
</div>


<%- include("../partials/footer") %> 