<%- include('../partials/header') %> 
<%- include('../partials/navbar') %> 

<div class="container">
    <div class="row">
<%- include('../partials/flash') %>
        <div class="col-lg-8">
            <h6 class="display-6 mb-3">My Cart</h6>
            <% for(let item of cart){ %> 
                <div class="card mb-3" style="max-width: 640px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="<%= item.img %>" alt="Product Img" style="height: 100%; width: 100%;">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.name %> </h5>
                                <p class="card-text text-muted"><%= item.desc.substring(0,70) %>...</p>
                                <div class="mt-3">
                                    <a class="btn btn-sm btn-outline-info" href="/products/<%= item._id %> ">View Product</a>
                                    <form action="/user/<%= currentUser._id %>/cart/<%= item._id %>?_method=DELETE" method="POST" class="d-inline">
                                        <button class="btn btn-sm btn-danger">remove</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %> 
        </div>

        <div class="col-lg-4">
            <h6 class="display-6 mb-3">Payment</h6>
            <ol class="list-group list-group-numbered">
                <% let totalAmount = 0 %> 
                <% for(let item of cart){ %> 

                    <% totalAmount += item.price %> 
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                        <div class="fw-bold"><%= item.name %></div>
                        &#8377;  <%= item.price %> 
                        </div>
                    </li>
                <% } %>     
            </ol>
            <ul class="list-group mb-3">
                <li class="list-group-item fw-bold">Total Amount : &#8377; <%= totalAmount %> </li>
            </ul>
            <a href="#" class="btn btn-sm btn-success">Proceed to Pay</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %> 